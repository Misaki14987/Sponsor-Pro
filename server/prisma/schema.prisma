model User {
  id      Int      @id @default(autoincrement())
  open_id String?  @unique
  name    String
  email   String   @unique
  phone   String   @unique
  role    String
  teacher Teacher?
  clubMember ClubMember?
  companyMember CompanyMember?
  initiatedSponsorships Sponsorship[]  @relation("UserInitiatedSponsorships")
  receivedSponsorships  Sponsorship[]  @relation("UserReceivedSponsorships")
}

model Teacher {
  id         Int     @id @default(autoincrement())
  user       User    @relation(fields: [userId], references: [id])
  userId     Int     @unique // 一对一关系
  subject    String
  department String
  school     String
}

model ClubMember {
  id          Int     @id @default(autoincrement())
  user        User    @relation(fields: [userId], references: [id])
  userId      Int     @unique
  category    String
  clubName    String
  school      String
  description String
}

model CompanyMember {
  id           Int     @id @default(autoincrement())
  user         User    @relation(fields: [userId], references: [id])
  userId       Int     @unique
  industry     String
  companyName  String
  description  String
}

model Sponsorship {
  id          Int                 @id @default(autoincrement())
  title       String              // 赞助标题
  description String?             // 赞助说明
  categories  String              // 活动分类
  location    String              // 所属省市
  amount      Float?              // 金额或估值（可选）
  type        SponsorshipType     // 发起类型（企业或学校发起）
  status      SponsorshipStatus   @default(PENDING) // 状态
  createdAt   DateTime            @default(now())
  updatedAt   DateTime            @updatedAt
  @@index([title])

  // 关联 User
  initiatorId Int                 // 发起方
  initiator   User                @relation("UserInitiatedSponsorships", fields: [initiatorId], references: [id])

  receiverId  Int                 // 接收方
  receiver    User                @relation("UserReceivedSponsorships", fields: [receiverId], references: [id])
}

enum SponsorshipType {
  SCHOOL_INITIATED
  COMPANY_INITIATED
}

enum SponsorshipStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
}
